<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ContentBrush" Color="Black" />

    <Style TargetType="{x:Type TextBlock}"
           x:Key="ChordName">
        <Setter Property="FontFamily" Value="Times New Roman" />
        <Setter Property="FontSize" Value="12" />
    </Style>


    <Style TargetType="{x:Type TextBlock}"
           x:Key="ChordFretOffsetText">
        <Setter Property="FontFamily" Value="Times New Roman" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style TargetType="{x:Type Run}"
           x:Key="ChordFretOffsetFretRun">
        <Setter Property="BaselineAlignment" Value="Superscript" />
        <Setter Property="FontSize" Value="8" />
    </Style>

    <Style TargetType="{x:Type TextBlock}"
           x:Key="ChordFingerIndexText">
        <Setter Property="FontFamily" Value="Times New Roman" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style TargetType="{x:Type Path}">
        <Setter Property="Fill" Value="{StaticResource ContentBrush}" />
    </Style>
    
</ResourceDictionary>